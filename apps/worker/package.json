{
  "name": "@treksistem/worker",
  "version": "0.1.0",
  "private": true,
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev src/index.ts --local --persist",
    "deploy": "wrangler deploy --minify src/index.ts",
    "build": "wrangler deploy --dry-run --minify src/index.ts",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist .wrangler"
  },
  "dependencies": {
    "hono": "^4.3.11",
    "drizzle-orm": "^0.30.10",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@treksistem/eslint-config-custom": "workspace:*",
    "@treksistem/db-schema": "workspace:*",
    "@treksistem/shared-types": "workspace:*",
    "@cloudflare/workers-types": "^4.20240512.0",
    "wrangler": "^3.57.1",
    "typescript": "^5.4.5"
  }
} 