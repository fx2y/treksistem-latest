{
  "name": "@treksistem/worker",
  "version": "0.1.0",
  "private": true,
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev src/index.ts --local --persist-to .wrangler/state",
    "deploy": "wrangler deploy --minify src/index.ts",
    "build": "wrangler deploy --dry-run --minify src/index.ts",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 100",
    "lint:fix": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 100 --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist .wrangler",
    "test": "vitest run",
    "test:unit": "vitest run --exclude '**/integration/**'",
    "test:integration": "vitest run src/test/integration/",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:verify": "tsx src/test/run-verification.ts",
    "test:verify:verbose": "tsx src/test/run-verification.ts --verbose",
    "test:verify:watch": "tsx src/test/run-verification.ts --watch",
    "test:verify:bail": "tsx src/test/run-verification.ts --bail --verbose",
    "test:integration:watch": "vitest src/test/integration/",
    "test:mitra-api": "vitest run src/test/integration/mitra-api-verification.test.ts",
    "test:mitra-api:watch": "vitest src/test/integration/mitra-api-verification.test.ts",
    "test:mitra-api:verbose": "VERBOSE_TEST_LOGS=true vitest run src/test/integration/mitra-api-verification.test.ts --reporter=verbose",
    "verify:is7": "tsx src/test/run-verification.ts --filter 'Service Configuration API'",
    "verify:is8": "tsx src/test/run-verification.ts --filter 'Driver Management API'",
    "verify:all": "tsx src/test/run-verification.ts --verbose --coverage"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.6.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "drizzle-orm": "^0.30.10",
    "hono": "^4.3.11",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240512.0",
    "@treksistem/db-schema": "workspace:*",
    "@treksistem/eslint-config-custom": "workspace:*",
    "@treksistem/shared-types": "workspace:*",
    "@types/node": "^20.12.7",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "prettier": "^3.2.5",
    "tsx": "^4.19.4",
    "typescript": "^5.4.5",
    "vitest": "^2.1.8",
    "wrangler": "^3.57.1"
  }
}